

# -*- coding:utf-8 -*-
class solution:
    def solve(self,A):
        length=len(A)
        if length==0 or length==1:
            return A
        elif length==2:
            if A[0]>A[1]:
                k=A[0]
                A[0]=A[1]
                A[1]=k
                return A
        #交换基准数与列表最后一个数的位置
        k=A[int(length/2)]
        A[int(length/2)]=A[length-1]
        A[length-1]=k
        print(A[length-1])
        i=0
        j=length-2
        while i<j:
            while A[i]<A[length-1]:
                i=i+1
            while A[j]>A[length-1]:
                j=j-1
            #交换大数小数的位置
            if i<j:
                k=A[i]
                A[i]=A[j]
                A[j]=k
        k=A[i]
        A[i]=A[length-1]
        A[length-1]=k
        B=[]
        C=[]
        for t in range(i):
            B.append(A[t])
        for t in range(i+1,length):
            C.append(A[t])
        print(B)
        print(C)
        result = self.solve(B)
        result.append(A[int(length/2)])
        result=result+self.solve(C)
        return result
    
so=solution()
print (so.solve([6,2,1,0]))
        
        